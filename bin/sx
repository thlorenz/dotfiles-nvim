#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

export SCRATCHVIM_RUNTIME_DIR="${SCRATCHVIM_RUNTIME_DIR:-"/Users/thlorenz/.local/share/sxvim"}"
export SCRATCHVIM_CONFIG_DIR="${SCRATCHVIM_CONFIG_DIR:-"/Users/thlorenz/dotfiles/config/sxvim"}"
export SCRATCHVIM_CACHE_DIR="${SCRATCHVIM_CACHE_DIR:-"/Users/thlorenz/.cache/sxvim"}"

rm $SCRATCHVIM_RUNTIME_DIR
ln -s $DIR/../ $SCRATCHVIM_RUNTIME_DIR

exec nvim -u "$SCRATCHVIM_RUNTIME_DIR/init.lua" "$@"
